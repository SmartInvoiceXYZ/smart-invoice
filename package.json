{
  "name": "smart-invoice",
  "version": "0.1.0",
  "dependencies": {
    "lodash": "^4.17.21",
    "next": "14.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "@changesets/cli": "^2.27.7",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.17.0",
    "async-prompt": "^1.0.1",
    "conventional-changelog-cli": "^5.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "ethers": "^5.1.0",
    "husky": "^6.0.0",
    "it-all": "^1.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "only-allow": "^1.2.1",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "syncpack": "^12.4.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "escrow",
    "ethereum",
    "smart-invoice",
    "workspaces"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,sol}": [
      "prettier --write"
    ]
  },
  "private": false,
  "scripts": {
    "build": "pnpm -r build",
    "changelog": "echo 'generate master changelog' && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changeset": "changeset",
    "constants:build": "pnpm --filter @smartinvoicexyz/constants build",
    "contracts:build": "pnpm --filter @smartinvoicexyz/contracts build",
    "contracts:deploy-factory": "pnpm --filter @smartinvoicexyz/contracts deploy-factory",
    "contracts:lint": "pnpm --filter @smartinvoicexyz/contracts lint",
    "contracts:test": "pnpm --filter @smartinvoicexyz/contracts test",
    "dapp:build": "pnpm --filter @smartinvoicexyz/dapp build",
    "dapp:dev": "pnpm --filter @smartinvoicexyz/dapp dev",
    "dapp:format": "pnpm --filter @smartinvoicexyz/dapp format",
    "dapp:lint": "pnpm --filter @smartinvoicexyz/dapp lint",
    "dapp:start": "pnpm --filter @smartinvoicexyz/dapp start",
    "dapp:test": "pnpm --filter @smartinvoicexyz/dapp test",
    "docs:build": "pnpm --filter @smartinvoicexyz/docs build",
    "docs:start": "pnpm --filter @smartinvoicexyz/docs start",
    "format": "prettier --ignore-path .prettierignore --write \"{*,**/*}.{ts,tsx,js,jsx,json,md,sol}\"",
    "lint": "eslint --ignore-path .prettierignore \"./packages/**/*.{ts,tsx,js,jsx}\"",
    "preinstall": "only-allow pnpm",
    "prepare": "husky install",
    "publish": "pnpm -r publish",
    "subgraph:auth": "pnpm --filter @smartinvoicexyz/subgraph auth",
    "subgraph:build": "pnpm --filter @smartinvoicexyz/subgraph build",
    "subgraph:codegen": "pnpm --filter @smartinvoicexyz/subgraph codegen",
    "syncpack": "syncpack list-mismatches",
    "update-deps": "pnpm update -i -r --latest"
  },
  "workspaces": {
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/@nomiclabs/**",
      "**/solidity-coverage",
      "**/bulma",
      "**/@ethersproject/**",
      "**/@docusaurus/**"
    ],
    "packages": [
      "packages/*"
    ]
  }
}
