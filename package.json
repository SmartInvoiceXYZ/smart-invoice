{
  "name": "@smartinvoicexyz/mono",
  "version": "0.1.0",
  "dependencies": {
    "lodash": "^4.17.21",
    "next": "^15.3.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "@changesets/cli": "^2.27.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "async-prompt": "^1.0.1",
    "dotenv": "^16.5.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.5",
    "it-all": "^1.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "30.0.0-beta.3",
    "lint-staged": "^15.2.9",
    "only-allow": "^1.2.1",
    "prettier": "^3.3.3",
    "syncpack": "^13.0.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "escrow",
    "ethereum",
    "smart-invoice",
    "workspaces"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,sol}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.11.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dapp:build": "pnpm packages:build && pnpm --filter 'smartinvoicexyz-dapp' build",
    "dapp:dev": "pnpm --filter 'smartinvoicexyz-dapp' dev",
    "format": "prettier --ignore-path .prettierignore --write --plugin=prettier-plugin-solidity \"{*,**/*}.{js,jsx,ts,tsx,json,md,sol}\"",
    "lint": "pnpm -r lint",
    "lint-staged": "lint-staged",
    "packages:build": "pnpm --filter '@smartinvoicexyz/*' build",
    "preinstall": "only-allow pnpm",
    "syncpack": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "typecheck": "pnpm -r typecheck",
    "update-deps": "pnpm update -i -r --latest"
  },
  "workspaces": {
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/@nomiclabs/**",
      "**/solidity-coverage",
      "**/bulma",
      "**/@ethersproject/**",
      "**/@docusaurus/**"
    ],
    "packages": [
      "apps/*",
      "packages/*"
    ]
  }
}
