{
  "name": "@smart-invoice/contracts",
  "version": "0.1.0",
  "scripts": {
    "hardhat": "hardhat",
    "build": "hardhat compile && yarn flatten",
    "test": "hardhat test",
    "verify-trigger": "hardhat run scripts/verifyTrigger.js --network localhost",
    "node-graph": "hh node --hostname 0.0.0.0",
    "console-local": "npx hardhat console --network localhost",
    "coverage": "hardhat coverage",
    "help": "hardhat help",
    "clean": "hardhat clean",
    "lint": "solhint contracts/{*,**/*}.sol",
    "test-factory": "hardhat test ./test/SmartInvoiceFactory.js",
    "test-escrow": "hardhat test ./test/SmartInvoiceEscrow.js",
    "escrow-add-goerli": "hardhat run scripts/add-escrow.js --network goerli",
    "escrow-add-local": "hardhat run scripts/add-escrow.js --network localhost",
    "add-instant-local": "hardhat run scripts/add-instant.js --network localhost",
    "add-instant-goerli": "hardhat run scripts/add-instant.js --network goerli",
    "deploy-instant-local": "hardhat run scripts/deploy-instant.js --network localhost",
    "deploy-instant-goerli": "hardhat run scripts/deploy-instant.js --network goerli",
    "deploy-local": "hardhat run scripts/deploy-factory.js --network localhost",
    "deploy-kovan": "hardhat run scripts/deploy-factory.js --network kovan",
    "deploy-mainnet": "hardhat run scripts/deploy-factory.js --network mainnet",
    "deploy-rinkeby": "hardhat run scripts/deploy-factory.js --network rinkeby",
    "deploy-goerli": "hardhat run scripts/deploy-factory.js --network goerli",
    "deploy-sokol": "hardhat run scripts/deploy-factory.js --network sokol",
    "deploy-xdai": "hardhat run scripts/deploy-factory.js --network xdai",
    "flatten-factory": "hardhat flatten contracts/SmartInvoiceFactory.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' | awk '/pragma experimental ABIEncoderV2;/&&c++>0 {next} 1' > flat/SmartInvoiceFactory.sol",
    "flatten-invoice": "hardhat flatten contracts/SmartInvoice.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' | awk '/pragma experimental ABIEncoderV2;/&&c++>0 {next} 1' > flat/SmartInvoice.sol",
    "flatten": "yarn flatten-factory && yarn flatten-invoice"
  },
  "dependencies": {
    "@ethersproject/address": "^5.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-ganache": "^2.0.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.0.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@typescript-eslint/parser": "^5.27.0",
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "delay": "^5.0.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.1.0",
    "fs": "^0.0.1-security",
    "hardhat": "^2.1.2",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^8.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "querystring": "^0.2.1",
    "semver": "^7.3.5",
    "solhint": "^3.3.4",
    "solidity-coverage": "^0.7.16"
  },
  "license": "MIT"
}
