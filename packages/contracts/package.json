{
  "name": "@smartinvoicexyz/contracts",
  "description": "Solidity smart contracts of the Smart Invoice protocol.",
  "version": "0.1.28",
  "dependencies": {
    "@kleros/dispute-resolver-interface-contract": "^8.0.0",
    "@kleros/erc-792": "^8.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.2.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@types/chai": "4.3.16",
    "@types/chai-as-promised": "7.1.8",
    "@types/mocha": "^10.0.9",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "dotenv": "^16.5.0",
    "hardhat": "^2.24.1",
    "hardhat-chai-matchers-viem": "^2.0.8",
    "hardhat-gas-reporter": "^2.2.3",
    "prettier-plugin-solidity": "^2.0.0",
    "solhint-community": "^4.0.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.16",
    "typescript": "^5.8.3",
    "viem": "^2.30.2"
  },
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write --plugin=prettier-plugin-solidity",
      "solhint --fix"
    ]
  },
  "private": true,
  "scripts": {
    "add-implementation": "hardhat run scripts/add-implementation.ts --network",
    "build": "hardhat compile && pnpm flatten-all",
    "clean": "hardhat clean && rm -rf contracts/build",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "coverage:report": "python3 -m http.server --directory ./coverage",
    "create-with-zap": "hardhat run scripts/create-safe-split-escrow.ts --network",
    "deploy-factory": "hardhat run scripts/deploy-factory.ts --network",
    "deploy-zap": "hardhat run scripts/deploy-zap.ts --network",
    "flatten-all": "mkdir -p flat && pnpm flatten-factory && pnpm flatten-escrow && pnpm flatten-zap && pnpm flatten-dao-zap",
    "flatten-escrow": "forge flatten contracts/variants/base/SmartInvoiceEscrowPush.sol > flat/SmartInvoiceEscrow.sol",
    "flatten-factory": "forge flatten contracts/SmartInvoiceFactory.sol > flat/SmartInvoiceFactory.sol",
    "flatten-zap": "forge flatten contracts/SafeSplitsEscrowZap.sol > flat/SafeSplitsEscrowZap.sol",
    "flatten-dao-zap": "forge flatten contracts/SafeSplitsDaoEscrowZap.sol > flat/SafeSplitsDaoEscrowZap.sol",
    "format": "prettier --ignore-path .prettierignore --write --plugin=prettier-plugin-solidity \"{*,**/*}.{ts,json,md,sol}\"",
    "help": "hardhat help",
    "lint": "pnpm lint:sol && pnpm lint:ts",
    "lint:sol": "solhint -f table \"contracts/{*,**/*}.sol\"",
    "lint:ts": "eslint --ignore-path .gitignore \"./**/*.ts\"",
    "test:ts": "pnpm test-factory && pnpm test-escrow && pnpm test-escrow-all && pnpm test-zap && pnpm test-dao-zap",
    "test:sol": "forge test --fuzz-runs 10000",
    "test": "pnpm test:ts && pnpm test:sol",
    "test-escrow": "hardhat test ./test/SmartInvoiceEscrow.ts",
    "test-escrow-all": "hardhat test ./test/SmartInvoiceEscrowAll.ts",
    "test-factory": "hardhat test ./test/SmartInvoiceFactory.ts",
    "test-zap": "FORK=true hardhat test ./test/SafeSplitsEscrowZap.ts",
    "test-dao-zap": "FORK=true hardhat test ./test/SafeSplitsDaoEscrowZap.ts",
    "typecheck": "tsc --noEmit",
    "verify-contract": "hardhat run scripts/verify-contract.ts --network",
    "preinstall": "forge install"
  }
}
