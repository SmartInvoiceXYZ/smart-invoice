{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "build/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "hardhat.config.ts"
  ]
}
