{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../../jest.config.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../constants/tsconfig.lib.json" },
    { "path": "../forms/tsconfig.lib.json" },
    { "path": "../graphql/tsconfig.lib.json" },
    { "path": "../hooks/tsconfig.lib.json" },
    { "path": "../shared/tsconfig.lib.json" },
    { "path": "../types/tsconfig.lib.json" },
    { "path": "../ui/tsconfig.lib.json" },
    { "path": "../utils/tsconfig.lib.json" }
  ]
}
